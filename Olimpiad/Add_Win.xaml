<Window x:Class="Olimpiad.Add_Win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olimpiad"
        mc:Ignorable="d"
        Title="Add_Win" Height="257" Width="239">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="217*"></RowDefinition>
            <RowDefinition Height="24*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" x:Name="FirstStack" Margin="0,0,1,0"/>

        <StackPanel x:Name="SecStack" Grid.Column="1" >
        </StackPanel>

        <Button Grid.ColumnSpan="2" Grid.Row="1" Margin="80,2,80,2" Content="Accept Changes" FontSize="10" Click="Button_Click"></Button>
    </Grid>
</Window>
