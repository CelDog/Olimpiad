<Window x:Class="Olimpiad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olimpiad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"></ColumnDefinition>
            <ColumnDefinition Width="200*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="78,0,0,0" x:Name="WelcMenu" Content="Welcome to Olimpiad management and organization soft" FontSize="25" HorizontalAlignment="Left">

        </Label>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="260,50,280,30" Content="Open View" Click="Button_Click_1">

        </Button>
    </Grid>
</Window>
